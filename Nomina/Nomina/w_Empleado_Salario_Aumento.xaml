<Window x:Class="Nomina.w_Empleado_Salario_Aumento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nomina"
        mc:Ignorable="d"
        Title="w_Empleado_Salario_Aumento" Height="450" Width="800">
    <Canvas>
        <GroupBox Header="Aumento Salarial" Height="280" Width="772" Canvas.Left="10" Canvas.Top="10">
            <DataGrid Name="dgAumentoSalarial" Loaded="DgAumentoSalarial_Loaded" />


        </GroupBox>
        
            <Label x:Name="label" Content="Nuevo Salario:" Canvas.Left="30" Canvas.Top="314" Height="32" Width="97" Margin="0,4,0,43"/>
            <TextBox x:Name="txtNuevoSalario" Height="32" Canvas.Left="147" TextWrapping="Wrap" Canvas.Top="314" Width="120"/>
        <Button x:Name="btnActualizar" Content="Actualizar Salario" Click="BtnActualizar_Click" Canvas.Left="500" Canvas.Top="350" Width="162"/>



    </Canvas>
</Window>
